<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Perfil de Investidor</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    @Styles.Render("~/template/plugins/styles")
    @Styles.Render("~/template/styles")

<style type="text/css">
    .content-wrapper, .main-header {
        margin-left: 0!important;
    }
</style>
</head>
<body class="hold-transition">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Previdencia")" role="button">Minha Carteira</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Perfil","Previdencia")" role="button">Perfil de Investidor</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-user"></i>&nbsp;
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <div class="dropdown-divider"></div>
                        @Html.ActionLink("Sair", "Logout", "Usuarios", null, new { @class = "dropdown-item dropdown-footer" })
                    </div>
                </li>
            </ul>
        </nav>
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/template/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
